{
  "name": "templates",
  "version": "0.1.4",
  "private": "true",
  "license": "MIT",
  "scripts": {
    "precommit": "lint-staged",
    "preversion": "node ./scripts/sync-up-version.js && git add ."
  },
  "devDependencies": {
    "@shared/eslint-config": "file:../packages/eslint-config",
    "@shared/prettier-config": "file:../packages/prettier-config",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.22.0",
    "fs-extra": "^10.0.0",
    "lint-staged": "^10.5.4",
    "react-scripts": "^4.0.3",
    "semver": "^7.3.5",
    "tslint": "^6.1.3",
    "typescript": "^4.2.3",
    "write-pkg": "^4.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,css,ts,tsx}": [
      "npx eslint --cache --fix --quiet"
    ],
    "*": [
      "npx prettier --config .prettierrc.js --ignore-unknown --write --ignore-path .prettierignore "
    ]
  }
}
