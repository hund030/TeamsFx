deploy:
{{#cliRunNpmCommand}} install, workingDirectory: src, args: install {{/cliRunNpmCommand}}
{{#cliRunNpxCommand}} workingDirectory: src, bundle {{/cliRunNpxCommand}}
{{#cliRunNpxCommand}} workingDirectory: src, package {{/cliRunNpxCommand}}
{{{spfxDeploy}}}

# Triggered when 'teamsfx provision' is executed
provision:
{{{teamsAppCreate}}}

{{#teamsAppValidateManifest}} {{/teamsAppValidateManifest}}
